<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/ContactNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Matti Meikäläine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="8dp"
        android:text="2131232331"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContactNameText" />

    <Button
        android:id="@+id/ContactDetailsButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00BCD4"
        android:drawableTop="@android:drawable/ic_dialog_info"
        app:layout_constraintStart_toEndOf="@+id/ContactNameText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ContactDeleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:drawableBottom="@android:drawable/ic_delete"
        app:layout_constraintStart_toEndOf="@+id/ContactDetailsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactGroupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244dp"
        android:layout_marginTop="4dp"
        android:text="Ryhmä"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContactNumberText" />
</androidx.constraintlayout.widget.ConstraintLayout>